<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_Activity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/txtTripName3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Trip Name"
        />
    <EditText
        android:id="@+id/txtDestination3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Destination"/>
    <EditText
        android:id="@+id/txtDate3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Date"/>
    <EditText
        android:id="@+id/txtDuration3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Duration"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Risk : "
            android:textSize="20sp"/>
        <Switch

            android:id="@+id/txtRisk3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtRiskSwitch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textSize="20sp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/txtDescription3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Description"/>
    <EditText
        android:id="@+id/txtVehicle3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Vehicle"/>
    <TextView
        android:id="@+id/Id1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/edit_trip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_gravity="center"/>
</LinearLayout>