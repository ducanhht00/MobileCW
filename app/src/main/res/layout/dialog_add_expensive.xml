<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#7500BCD4"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Expensive"
        android:textSize="20sp"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/txtAddNameExpensive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="fill name"/>
    <EditText
        android:id="@+id/txtAddAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="fill amount"/>
    <EditText
        android:id="@+id/txtAddDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="choose day"/>
    <EditText
        android:id="@+id/txtAddComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fill comment"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/add_expensive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textSize="11sp"
            android:layout_weight="1"
            android:layout_margin="5sp"/>
        <Button
            android:id="@+id/cancel_expensive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="10sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:lines="1"
            />
    </LinearLayout>
</LinearLayout>