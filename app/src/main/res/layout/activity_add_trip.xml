<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTrip"
    android:orientation="vertical">

    <EditText
        android:id="@+id/txtTripName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Trip Name"
        />
    <EditText
        android:id="@+id/txtDestination2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Destination"/>
    <EditText
        android:id="@+id/txtDate2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Date"/>
    <EditText
        android:id="@+id/txtDuration2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Duration"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Risk : "
            android:textSize="20sp"/>
        <Switch

            android:id="@+id/txtRisk2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtRiskSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textSize="20sp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/txtDescription2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Description"/>
    <EditText
        android:id="@+id/txtVehicle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Vehicle"/>


    <TextView
        android:id="@+id/txtNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Notice: Press ADD To Add New Trip "/>
    <Button
        android:id="@+id/add_trip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:layout_gravity="center"/>
</LinearLayout>