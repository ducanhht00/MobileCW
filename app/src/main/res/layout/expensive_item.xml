<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="8"
        android:layout_margin="13sp">
        <TextView
            android:id="@+id/txtExpensiveName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expensive Name"
            android:textSize="25sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"/>
        <TextView
            android:id="@+id/txtExpensiveAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Amount of Expensive"
            android:layout_marginLeft="10sp"/>
        <TextView
            android:id="@+id/txtExpensiveDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Date"
            android:layout_marginLeft="10sp"/>
        <TextView
            android:id="@+id/txtExpensiveComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Comment"
            android:layout_marginLeft="10sp"
            android:layout_marginBottom="10sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgDeleteExpensive"
        android:layout_width="57sp"
        android:layout_height="57sp"
        android:layout_margin="35sp"
        android:src="@drawable/bin" />

</LinearLayout>